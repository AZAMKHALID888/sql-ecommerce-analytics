
[tool.sqlfluff.core]
dialect = postgres
max_line_length = 100

[tool.sqlfluff.rules]
tab_space_size = 2
indent_unit = space
comma_style = leading

[tool.sqlfluff.rules.L010]
capitalisation_policy = upper  # keywords UPPER

[tool.sqlfluff.rules.L014]
extended_capitalisation_policy = lower  # identifiers lower_snake_case
